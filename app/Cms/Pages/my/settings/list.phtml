                                <div class="form-group">
                                    <label>Birthday</label>
                                    <input name="birthday" class="form-control datepicker" type="text" value="" placeholder="Birthday">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>